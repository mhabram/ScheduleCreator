<Window x:Class="ScheduleCreator.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleCreator.WPF"
        
        xmlns:controls="clr-namespace:ScheduleCreator.WPF.Controls"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <controls:Navigationbar Grid.Column="0" DataContext="{Binding Navigator}"/>
        <ContentControl Grid.Column="1" Content="{Binding Navigator.CurrentViewModel}"/>
    </Grid>
</Window>
