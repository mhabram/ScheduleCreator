<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ScheduleCreator.WPF.Styles">
    <!--Colors-->
    <Color x:Key="ColorPrimaryDark">#171717</Color>
    <Color x:Key="ColorPrimaryMedium">#3d3d3d</Color>
    <Color x:Key="ColorPrimaryLight">#676767</Color>
    <Color x:Key="ColorSecondaryDark">#001734</Color>
    <Color x:Key="ColorSecondaryMedium">#1d3d5e</Color>
    <Color x:Key="ColorSecondaryLight">#4c678b</Color>
    
    <!--Brushes-->
    <SolidColorBrush x:Key="BrushPrimaryDark" Color="{StaticResource ColorPrimaryDark}"/>
    <SolidColorBrush x:Key="BrushPrimaryMedium" Color="{StaticResource ColorPrimaryMedium}"/>
    <SolidColorBrush x:Key="BrushPrimaryLight" Color="{StaticResource ColorPrimaryLight}"/>
    <SolidColorBrush x:Key="BrushSecondaryDark" Color="{StaticResource ColorSecondaryDark}"/>
    <SolidColorBrush x:Key="BrushSecondaryMedium" Color="{StaticResource ColorSecondaryMedium}"/>
    <SolidColorBrush x:Key="BrushSecondaryLight" Color="{StaticResource ColorSecondaryLight}"/>

</ResourceDictionary>